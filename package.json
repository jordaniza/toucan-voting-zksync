{
  "name": "zksync-hardhat-template",
  "description": "A template for zkSync smart contracts development with Hardhat",
  "private": true,
  "author": "Matter Labs",
  "license": "MIT",
  "repository": "https://github.com/matter-labs/zksync-hardhat-template.git",
  "scripts": {
    "deploy:testnet": "hardhat deploy-zksync --script deploy.ts --network zkSyncSepoliaTestnet",
    "deploy:mainnet": "hardhat deploy-zksync --script deploy.ts --network zkSyncMainnet",
    "deploy:fork": "hardhat deploy-zksync --script deploy.ts --network inMemoryNode",
    "deploy:help": "hardhat deploy-zksync --help",
    "deploy:check": "hardhat deploy-zksync --script check.ts --network zkSyncMainnet",
    "interact": "hardhat deploy-zksync --script interact.ts",
    "compile": "hardhat compile",
    "build": "hardhat compile",
    "clean": "hardhat clean",
    "test": "hardhat test --network hardhat",
    "test:fork": "hardhat test --network inMemoryNode",
    "script:oappConfig-fork": "hardhat deploy-zksync --script oappConfig.ts --network inMemoryNode",
    "script:oappConfig-mainnet": "hardhat deploy-zksync --script oappConfig.ts --network zkSyncMainnet",
    "deploy:paymaster-sepolia": "hardhat deploy-zksync --script test-paymaster.ts --network zkSyncSepoliaTestnet",
    "deploy:paymaster-fork": "hardhat deploy-zksync --script test-paymaster.ts --network inMemoryNode",
    "deploy:paymaster-mainnet": "hardhat deploy-zksync --script test-paymaster.ts --network zkSyncMainnet"
  },
  "devDependencies": {
    "@layerzerolabs/lz-evm-messagelib-v2": "^2.3.25",
    "@layerzerolabs/lz-evm-oapp-v2": "^2.3.25",
    "@layerzerolabs/lz-evm-protocol-v2": "^2.3.25",
    "@matterlabs/hardhat-zksync": "^0.1.0",
    "@matterlabs/zksync-contracts": "^0.6.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@openzeppelin/contracts": "^4.9.2",
    "@openzeppelin/contracts-upgradeable": "^4.9.2",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.4",
    "mocha": "^10.2.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.9.5",
    "zksync-ethers": "^5.7.0"
  },
  "dependencies": {
    "@aragon/osx": "^1.3.0",
    "@layerzerolabs/lz-v2-utilities": "^2.3.29",
    "@layerzerolabs/test-devtools-evm-hardhat": "^0.2.5"
  }
}
